{
  "suggest.noselect": true,
  "coc.preferences.formatOnSave": true,
  "clangd": {
    "arguments": [
      "--header-insertion=never"
    ],
    "semanticHighlighting": true,
    "hover": true
  },
  "languageserver": {
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": [
        "terraform",
        "tf",
        "hcl"
      ]
    }
  },
  "python": {
    "formatting": {
      "provider": "ruff"
    },
    "linting": {
      "ruffEnabled": true
    }
  },
  "pyright": {
    "organizeimports": {
      "provider": true
    },
    "inlayHints": {
      "functionReturnTypes": false,
      "variableTypes": false,
      "parameterTypes": false
    }
  }
}
