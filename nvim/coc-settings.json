{
  "suggest.noselect": true,
  "coc.preferences.formatOnSave": true,

  "clangd": {
    "arguments": [
      "--header-insertion=never"
    ],
    "semanticHighlighting": true,
    "hover": true
  },

  "languageserver": {
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform", "tf", "hcl"]
    }
  },

  "ruff.autoFixOnSave": true
}

